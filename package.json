{
  "name": "openskatemap",
  "homepage": "https://cristiklein.github.io/openstakemap/",
  "private": true,
  "type": "module",
  "version": "0.25.0",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:client": "vite --host",
    "dev:server": "vite-node server/start.js",
    "build": "concurrently --max-processes 1 \"npm:build:*\"",
    "build:client": "tsc -b && vite build",
    "build:server": "tsup",
    "lint": "eslint .",
    "test": "vitest",
    "test:container": "docker build -t blah . && docker run --rm blah; echo 'If successful, you should see connect ECONNREFUSED 127.0.0.1:5432'",
    "predeploy": "(git diff-files --quiet || (echo 'Please ensure workdir is clean.' && exit 1)) && vitest run && npm run build",
    "deploy": "gh-pages -d dist",
    "start": "echo 'Not implemented. See Dockerfile.'"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-prom-bundle": "^8.0.0",
    "knex": "^3.1.0",
    "leaflet": "^1.9.4",
    "lodash.throttle": "^4.1.1",
    "pg": "^8.15.6",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-leaflet": "^5.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/leaflet": "^1.9.17",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^22.15.3",
    "@types/pino": "^7.0.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.1.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.4",
    "vite-node": "^3.1.2",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^3.1.2"
  }
}
